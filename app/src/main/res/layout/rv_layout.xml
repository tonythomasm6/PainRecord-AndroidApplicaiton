<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/painIntenseText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="Pain Intensity Level"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/painIntenseVal"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/painIntenseText"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="17dp"
        android:gravity="center"
        android:hint="100" />

    <TextView
        android:id="@+id/painLocationText"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/painIntenseText"
        android:text="Pain Location"
        android:textColor="@color/black"
        android:gravity="center"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/painLocationVal"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/painIntenseText"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="17dp"
        android:layout_toRightOf="@id/painIntenseVal"
        android:gravity="center"
        android:hint="100" />

    <TextView
        android:id="@+id/mood"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/painLocationVal"
        android:text="Mood"
        android:textColor="@color/black"
        android:gravity="center"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/moodVal"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/painLocationText"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_toRightOf="@id/painLocationVal"
        android:gravity="center"
        android:hint="100" />

    <ImageView
        android:id="@+id/upArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mood"
        android:layout_marginLeft="-20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="50dp"
        android:layout_toRightOf="@+id/moodVal"
        android:src="@drawable/up_arrow" />
    <ImageView
        android:id="@+id/downArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/upArrow"
        android:layout_marginLeft="-20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="50dp"
        android:layout_toRightOf="@+id/moodVal"
        android:src="@drawable/down_arrow" />

    <TextView
        android:id="@+id/date"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:layout_below="@id/painIntenseVal"
        android:text="Date"
        android:textColor="@color/black"
        android:gravity="center"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/dateVal"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/date"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="17dp"
        android:gravity="center"
        android:hint="dd-mm-yyyy" />

    <TextView
        android:id="@+id/stepsText"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="25dp"
        android:layout_below="@id/painLocationVal"
        android:layout_toRightOf="@id/date"
        android:text="Steps Taken"
        android:textColor="@color/black"
        android:gravity="center"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/stepsVal"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/stepsText"
        android:layout_toRightOf="@id/dateVal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="17dp"
        android:gravity="center"
        android:hint="100" />

    <TextView
        android:id="@+id/goalStepsText"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="25dp"
        android:layout_below="@id/painLocationVal"
        android:layout_toRightOf="@id/stepsText"
        android:text="Goal Steps"
        android:textColor="@color/black"
        android:gravity="center"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/goalStepsValue"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/stepsText"
        android:layout_toRightOf="@id/stepsVal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="17dp"
        android:gravity="center"
        android:hint="100" />

    <RelativeLayout
        android:id="@+id/weather"
        android:layout_below="@+id/stepsVal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CCCCFF">
        <TextView
            android:id="@+id/temperatureText"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="25dp"
            android:text="Temperature"
            android:textColor="@color/black"
            android:gravity="center"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/temperatureVal"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/temperatureText"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="17dp"
            android:gravity="center"
            android:hint="0" />

        <TextView
            android:id="@+id/humidityText"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@id/temperatureText"
            android:text="Humidity"
            android:textColor="@color/black"
            android:gravity="center"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/humidityVal"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/humidityText"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="17dp"
            android:layout_toRightOf="@id/temperatureVal"
            android:gravity="center"
            android:hint="100" />

        <TextView
            android:id="@+id/pressureText"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@id/humidityText"
            android:text="Pressure"
            android:textColor="@color/black"
            android:gravity="center"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/pressureVal"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/pressureText"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="17dp"
            android:layout_toRightOf="@id/humidityVal"
            android:gravity="center"
            android:hint="100" />

    </RelativeLayout>

</RelativeLayout>